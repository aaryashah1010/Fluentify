{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "jest",
  "testRunnerNodeArgs": [
    "--experimental-vm-modules"
  ],
  "jest": {
    "projectType": "custom",
    "configFile": "package.json",
    "enableFindRelatedTests": true
  },
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ],
  "coverageAnalysis": "perTest",
  "timeoutMS": 20000,
  "timeoutFactor": 1.5,
  "mutate": [
    "src/services/**/*.js",
    "src/utils/**/*.js",
    "src/middlewares/**/*.js",
    "!src/**/*.test.js",
    "!src/utils/server.js",
    "!src/utils/test-gemini.js"
  ],
  "inPlace": true
}